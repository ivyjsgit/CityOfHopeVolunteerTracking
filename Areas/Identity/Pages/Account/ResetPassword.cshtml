@page
@model ResetPasswordModel
@{
ViewData["Title"] = "Reset password";
Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<div class="login-background nopadding splash nomargins" id="loginbody">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="login-box span12 pagination-centered less-margin-top">
                    <h1 class="padding">@ViewData["Title"]</h1>
                    <h4 class="padding text-in-div">Resetting the password for @Html.DisplayFor(model =>
                        model.VolunteerEmail)</h4>
                    <hr />

                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input asp-for="Input.Code" type="hidden" />
                        <input asp-for="Input.Email" value="@Model.VolunteerEmail" type="hidden" />
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Reset</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>









@section Scripts {
<partial name="_ValidationScriptsPartial" />
}